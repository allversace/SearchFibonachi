<Window x:Class="SearchFibonachi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchFibonachi"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        >
    <Grid>
        <TextBox x:Name="resultFibonachi" Width="200" Height="50" Margin="300,288,300,96" Background="{x:Null}"/>
        <TextBox x:Name="vvodFibonachi" Width="200" Height="50" Margin="300,108,300,276" PreviewTextInput="vvodFibonachi_PreviewTextInput" TextWrapping="NoWrap"/>
        <Label Content="Введите число для поиска" HorizontalAlignment="Left" Margin="252,43,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Button x:Name="search" Content="Поиск" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="25" Click="search_Click"/>
    </Grid>
</Window>
